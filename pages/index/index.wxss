.userinfo {
  display: block;
  padding:13rpx 10rpx;
  background: #EFF0DC;
  border: 2px solid #34352C;
  border-radius: 5px;
}

.userinfo-avatar {
  width: 64rpx;
  height: 64rpx;
  margin: 20rpx;
  border-radius: 50%;
  float:left;
}

.userinfo-nickname {
  color: #393112;
  font-size:28rpx; 
  line-height: 10rpx;
}

.icon-add-50{
    position: relative;
    box-sizing: border-box;
    width: 50px;
    height: 50px;
    border: 2px dashed #34352C;
    border-radius: 50%;
}
.icon-add-50:before{
    content: '';
    position: absolute;
    width: 30px;
    height: 2px;
    left: 50%;
    top: 50%;
    margin-left: -15px;
    margin-top: -1px;
    background-color: #393112;
}
.icon-add-50:after{
    content: '';
    position: absolute;
    width: 2px;
    height: 30px;
    left: 50%;
    top: 50%;
    margin-left: -1px;
    margin-top: -15px;
    background-color: #393112;
}

view.content{
  margin-top:30rpx;
}

view.content view{
  width:200rpx;
  height:200rpx;
  border-radius: 5px;
  border:2px solid #393112;
  background:#FFF;
  float:left;
  margin:16rpx;
  text-align: center;
}

view.content view.item{
  position:relative;
}

view.content view.item-detail{
  background:#EFF0DC;
  position:relative;
  margin:0;
  border:0;
  line-height:100px;
  display: flex;
  justify-content: center;
  align-items: center;
}

view.mask{
  position: absolute;
  top:0;
  bottom:0;
  width:100%;
  height:100%;
  background: rgba(0,0,0,.5);
  z-index: 98;
}

view.dialog{
  position: absolute;
  top:20%;
  left:10%;
  width:72%;
  height:auto;
  background:#EFF0DC;
  border:2px solid #34352C;
  border-radius: 5px;
  padding:4%;
  z-index:99;
}

view.dialog button{
  margin-top:4%;
}

view.content view.item .delete{
  position: absolute;
  top:-20rpx;
  right:-20rpx;
border:0;
background:#ed3833;
width:40rpx;
height:40rpx;
color:#FFF;
border-radius:50rpx;
font-size:30rpx;
padding:0;
